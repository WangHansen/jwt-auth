{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noImplicitThis": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node", "jest", "jose", "cron", "express"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "tests"]
}
